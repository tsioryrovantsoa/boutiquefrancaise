{% extends 'base.html.twig' %}

{% block title %}Mes Commandes - Mon Compte
{% endblock %}

{% block body %}

	<div class="container pt-5">
		<h1>Ma commande
			{{order.reference}}</h1>
		<hr>
		Commande passe le :
		{{ order.createdAt|date('d/m/Y') }}<br/>
		Reference :
		{{ order.reference }}<br/>
		Status :
		<strong>
			{% if order.state == 1 %}
				Paiement accepte
			{% elseif order.state == 2 %}
				Preparation en cours
			{% elseif order.state == 3 %}
				Livraison en cours
			{% endif %}
		</strong><br/>
		Transporteur choisi :
		{{ order.carrierName }}<br/>
		<hr>
		Details :
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Produit</th>
					<th scope="col">Qt</th>
					<th scope="col">Prix</th>
					<th scope="col">Total</th>
				</tr>
			</thead>
			<tbody>
				{% for product in order.orderDetails %}
					<tr>
						<th scope="row">{{ product.product }}</th>
						<td>{{ product.quantity }}</td>
						<td>{{ (product.price/100)|number_format(0,' ',' ') }}
							Ariary</td>
						<td>{{(product.total/100)|number_format(0,' ',' ') }}
							Ariary</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="text-right">
			<strong>Sous-total :
			</strong>
			{{((order.getTotal()/100)|number_format(0,' ',' '))}}
			Ariary<br/>
			<strong>Livraison :
			</strong>
			{{(order.carrierprice)|number_format(0,' ',' ') }}
			Ariary<br/>
			<strong>Total :
			</strong>
			{{((order.carrierPrice + (order.getTotal()/100)))|number_format(0,' ',' ')}}
			Ariary
			<br/>
		</div>
	</div>
{% endblock %}
