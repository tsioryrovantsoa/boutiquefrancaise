{% extends 'base.html.twig' %}

{% block title %}Validation de commande
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<div class="container-fluid">
			<div class="row px-xl-5">
				<div class="col-lg-8">
					<h5 class="section-title position-relative text-uppercase mb-3">
						<span class="bg-secondary pr-3">Valider mon commande</span>
					</h5>
					<div class="bg-light p-30 mb-5">
						<div class="row">
						{{ form_start(form,{action:path('order_recap')}) }}
						{{ form_end(form) }}
							</div>
						</div>
					</div>
					<div class="col-lg-4">
						<h5 class="section-title position-relative text-uppercase mb-3">
							<span class="bg-secondary pr-3">Panier</span>
						</h5>
						<div class="bg-light p-30 mb-5">
							<div class="border-bottom">
								<h6 class="mb-3">Produits</h6>
								{% set total = null %}
								{% for product in cart %}
									<div class="d-flex justify-content-between">
										<p>{{ product.product.name }}
											({{ product.quantity }})</p>
										<p>{{ ((product.product.price * product.quantity) / 100)|number_format(0,',',' ')}}
											Ar</p>
									</div>
									{% set total = total + (product.product.price * product.quantity) %}
								{% endfor %}
							</div>
							<div class="pt-2">
								<div class="d-flex justify-content-between mt-2">
									<h5>Total</h5>
									<h5>{{ (total / 100)|number_format(0,',',' ')}}
										Ar</h5>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
