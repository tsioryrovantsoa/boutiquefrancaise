{% extends 'base.html.twig' %}

{% block title %}Recupitulatif
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<div class="container-fluid">
			<div class="row px-xl-5">
				<div class="col-lg-8">
					<h5 class="section-title position-relative text-uppercase mb-3">
						<span class="bg-secondary pr-3">RESUME</span>
					</h5>
					<div class="bg-light p-30 mb-5">
							<div class="border-bottom">
								Mon addresse de livraison<br>
								{{ delivery|raw }}
							</div>
							<div>
								{{ carrier.name }}<br>
								{{ carrier.description }}<br>
								{{ carrier.price|number_format(0,',',' ') }}
								Ar<br>
							</div>
					</div>
				</div>
				<div class="col-lg-4">
					<h5 class="section-title position-relative text-uppercase mb-3">
						<span class="bg-secondary pr-3">Commande</span>
					</h5>
					<div class="bg-light p-30 mb-5">
						<div class="border-bottom">
							<h6 class="mb-3">Produits</h6>
							{% set total = null %}
							{% for product in cart %}
								<div class="d-flex justify-content-between">
									<p>{{ product.product.name }}
										({{ product.quantity }})</p>
									<p>{{ ((product.product.price * product.quantity) / 100)|number_format(0,',',' ')}}
										Ar</p>
								</div>
								{% set total = total + (product.product.price * product.quantity) %}
							{% endfor %}
						</div>
						<div class="pt-2">
							<div class="d-flex justify-content-between mt-2">
								<h6>Sous-total</h6>
								<h6>{{ (total / 100)|number_format(0,',',' ')}}
									Ar</h6>
							</div>
							<div class="d-flex justify-content-between mt-2">
								<h6>Livraison
								</h6>
								<h6>{{ carrier.price|number_format(0,',',' ')}}
									Ar</h6>
							</div>
							<div class="d-flex justify-content-between mt-2">
								<h5>TOTAL
								</h5>
								<h6>{{ ((total / 100)+ carrier.price)|number_format(0,',',' ')}}
									Ar</h6>
							</div>


						</div>
						<a class="btn btn-block btn-primary font-weight-bold py-3">Payer {{ ((total / 100)+ carrier.price)|number_format(0,',',' ')}}
									Ar</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
