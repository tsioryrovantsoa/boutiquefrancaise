{% extends 'base.html.twig' %}

{% block title %}Validation de commande
{% endblock %}

{% block body %}

	<div class="example-wrapper text-center">
		<h1>Confirmation de la commande</h1>

		<p>
			Bonjour
			<strong>{{order.user.firstname}}
				{{order.user.lastname}}</strong>,
			<br/><br/>
			Nous vous remercions pour votre commande n:
			<strong>{{order.reference}}</strong>,<br/>
			<hr>
			Votre commande sera livre par
			<strong>{{order.carrierName}}</strong>
			a l'adresse suivante :
			<br/>
			{{ order.delivery|raw }}
            <hr>
            <a href="{{ path('app_account') }}">Rendez-vous dans votre compte pour voir les details du commande.</a> 
		</p>
	</div>
{% endblock %}
