{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublie
{% endblock %}

{% block body %}
	<div class="container">
	{% for message in app.flashes('notice') %}
		<div class="alert alert-info">
		{{ message }}
		</div>
	{% endfor %}
		<form method="post">

			<h1 class="h3 mb-3 font-weight-normal">Reinitialiser mon mot de passe</h1>
			<label for="inputEmail">Email</label>
			<input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			
            <br>
			<button class="btn btn-lg btn-primary" type="submit">
				Valider
			</button>
		</form>
		<br>
        <a href="{{ path('app_login') }}"><mark>Vous connectez</mark></a>
	</div>
{% endblock %}
